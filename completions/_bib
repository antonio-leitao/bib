#compdef bib

# Helper function to get completions from bib
_bib_get_completions() {
    local context="$1"
    local query="$2"
    
    # Call bib and get completions
    local IFS=$'\n'
    local -a completions
    completions=($(bib --complete "$query" --complete-context "$context" 2>/dev/null))
    
    if (( ${#completions[@]} == 0 )); then
        return 1
    fi
    
    # Format completions for _describe
    local -a formatted_completions
    local item
    for item in $completions; do
        # Keep the value:description format that _describe expects
        formatted_completions+=("$item")
    done
    
    # Use _describe to show the completions
    _describe -U -t papers 'papers' formatted_completions
    return 0
}

_bib() {
    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments -C \
        '1: :->command' \
        '*:: :->args'

    case $state in
        command)
            local commands=(
                'add:Add new reference from URL or PDF'
                'search:Search papers using fuzzy matching'
                'list:List all papers in the database'
                'stats:Show database statistics'
            )
            _describe 'command' commands
            ;;
        args)
            case $line[1] in
                add)
                    _arguments \
                        '1:url:_files' \
                        '(-n --notes)'{-n,--notes}'[Optional notes]:notes:' \
                        '(-h --help)'{-h,--help}'[Show help]'
                    ;;
                search)
                    # Check for author flag
                    local context="search-title"
                    if (( ${words[(I)-a]} )) || (( ${words[(I)--author]} )); then
                        context="search-author"
                    fi
                    
                    _arguments -C \
                        '(-a --author)'{-a,--author}'[Search by author instead of title]' \
                        '(-n --limit)'{-n,--limit}'[Maximum results]:limit:' \
                        '(-h --help)'{-h,--help}'[Show help]' \
                        '*: :_bib_complete_search'
                    ;;
                list)
                    _arguments \
                        '(-l --limit)'{-l,--limit}'[Maximum papers to display]:limit:' \
                        '(-h --help)'{-h,--help}'[Show help]'
                    ;;
                stats)
                    _arguments \
                        '(-h --help)'{-h,--help}'[Show help]'
                    ;;
            esac
            ;;
    esac
}

# Completion function for search queries
_bib_complete_search() {
    # Determine context
    local context="search-title"
    if (( ${words[(I)-a]} )) || (( ${words[(I)--author]} )); then
        context="search-author"
    fi
    
    # Get what user has typed so far
    # This is the KEY: use $PREFIX for partial word completion
    local query="$PREFIX"
    
    # Get and display completions
    _bib_get_completions "$context" "$query"
    
    # Never fall back to file completion
    return 0
}

_bib "$@"
